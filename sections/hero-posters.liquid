<div class="hero-posters">
  {% assign default_headings = "JORDAN|NB 550|SAMBA" | split: "|" %}
  {% assign default_subheadings = "Dream big and leave red bright steps with this jordan.|Classic style, modern comfort. Step up your sneaker game.|Perfection is samba." | split: "|" %}
  {% assign default_images = "jordan.jpg|nb550.webp|adidas-samba-sneakers-amy4.jpg" | split: "|" %}
  {% assign default_alts = "Poster 1|Poster 2|Poster 3" | split: "|" %}
  {% for i in (1..3) %}
    <div class="hero-poster" id="poster-{{ i }}">
      {% assign img_setting = 'poster' | append: i | append: '_image' %}
      {% assign heading_setting = 'poster' | append: i | append: '_heading' %}
      {% assign subheading_setting = 'poster' | append: i | append: '_subheading' %}
      {% assign default_img = default_images[i-1] %}
      {% assign default_heading = default_headings[i-1] %}
      {% assign default_subheading = default_subheadings[i-1] %}
      {% assign default_alt = default_alts[i-1] %}
      {% if section.settings[img_setting] != blank %}
        <img src="{{ section.settings[img_setting] | image_url: width: 600 }}" alt="{{ default_alt }}">
      {% else %}
        <img src="{{ default_img | asset_url }}" alt="{{ default_alt }}">
      {% endif %}
      <div class="hero-poster-content">
        <h2>{{ section.settings[heading_setting] | default: default_heading }}</h2>
        <p>{{ section.settings[subheading_setting] | default: default_subheading }}</p>
        <a href="#" class="hero-poster-btn">SHOP NOW</a>
      </div>
    </div>
  {% endfor %}
</div>

<style>
.hero-posters {
  display: flex;
  gap: 16px;
  margin: 0 auto;
  max-width: 1600px;
  padding: 32px 0;
}
.hero-poster {
  flex: 1 1 0;
  position: relative;
  overflow: hidden;
  border-radius: 8px;
  min-width: 0;
  background: #eee;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}
.hero-poster img {
  width: 100%;
  height: 400px;
  object-fit: cover;
  display: block;
}
.hero-poster-content {
  position: absolute;
  left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.4);
  color: #fff;
  padding: 24px;
}
.hero-poster-content h2 {
  font-size: 2rem;
  font-weight: bold;
  margin: 0 0 8px 0;
  text-transform: uppercase;
  letter-spacing: 2px;
}
.hero-poster-content p {
  margin: 0 0 16px 0;
  font-size: 1.1rem;
}
.hero-poster-btn {
  display: inline-block;
  background: #fff;
  color: #111;
  font-weight: bold;
  padding: 10px 24px;
  border-radius: 2px;
  text-decoration: none;
  margin-top: 8px;
  transition: background 0.2s, color 0.2s;
}
.hero-poster-btn:hover {
  background: #111;
  color: #fff;
}
@media (max-width: 900px) {
  .hero-posters {
    flex-direction: column;
    gap: 24px;
  }
  .hero-poster img {
    height: 220px;
  }
}
</style>

