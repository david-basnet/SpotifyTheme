{% schema %}
{
  "name": "Featured Men's Shoes",
  "blocks": [
    {
      "type": "featured_product",
      "name": "Featured Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Featured Men's Shoes"
    }
  ]
}
{% endschema %}

<div class="featured-shoes-gallery">
  <h2 class="featured-shoes-title">Featured Men's Shoes</h2>
  <div class="featured-shoes-slider-wrapper">
    <button class="slider-arrow left" onclick="slideFeaturedShoes('featured-men-slider', -1)">&#8592;</button>
    <div class="featured-shoes-slider" id="featured-men-slider">
      {% assign blocks = section.blocks | slice: 0, 6 %}
      {% for block in blocks %}
        {% if block.type == 'featured_product' %}
          <div class="gallery-product-block">
            {% assign product = all_products[block.settings.product] %}
            {% if product %}
              <a href="{{ product.url }}">
                <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title }}">
              </a>
              <div class="product-info">
                <h3>{{ product.title }}</h3>
                <p>${{ product.price | money_without_trailing_zeros }}</p>
                <a href="{{ product.url }}" class="shop-now-btn">Shop Now</a>
              </div>
            {% else %}
              <p>No product selected.</p>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
    <button class="slider-arrow right" onclick="slideFeaturedShoes('featured-men-slider', 1)">&#8594;</button>
  </div>
</div>

<style>
.featured-shoes-gallery {
  text-align: center;
  margin: 40px 0;
}
.featured-shoes-title {
  font-size: 2.2rem;
  font-weight: bold;
  margin-bottom: 32px;
}
.featured-shoes-slider-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
}
.featured-shoes-slider {
  display: flex;
  gap: 32px;
  overflow: hidden;
  width: 500px;
  transition: transform 0.3s;
}
.gallery-product-block {
  background: #fff;
  border-radius: 16px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.07);
  padding: 16px 16px 24px 16px;
  width: 220px;
  min-width: 220px;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.gallery-product-block img {
  width: 180px;
  height: 180px;
  object-fit: cover;
  border-radius: 8px;
  margin-bottom: 12px;
}
.product-info h3 {
  font-size: 1.1rem;
  font-weight: bold;
  margin: 0 0 4px 0;
}
.product-info p {
  font-size: 1rem;
  margin: 0 0 10px 0;
}
.shop-now-btn {
  background: #111;
  color: #fff;
  padding: 8px 24px;
  border-radius: 6px;
  text-decoration: none;
  font-weight: 600;
  transition: background 0.2s;
  display: inline-block;
}
.shop-now-btn:hover {
  background: #0276d9;
}
.slider-arrow {
  background: #fff;
  border: 1px solid #ccc;
  border-radius: 50%;
  width: 36px;
  height: 36px;
  font-size: 1.5rem;
  cursor: pointer;
  margin: 0 10px;
}
</style>
<script>
window.slideFeaturedShoes = function(id, dir) {
  var slider = document.getElementById(id);
  if (!slider) return;
  var itemWidth = 252; // width + gap
  var current = parseInt(slider.dataset.slide) || 0;
  var max = slider.children.length - 2;
  var next = current + dir;
  next = Math.max(0, Math.min(next, max));
  slider.style.transform = 'translateX(' + (-next * itemWidth) + 'px)';
  slider.dataset.slide = next;
}
</script>