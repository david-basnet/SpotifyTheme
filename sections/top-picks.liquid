          <div class="top-pick-card">
            {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.title }}" class="top-pick-img">
            {% endif %}
            <div class="top-pick-title">${{ block.settings.title }}</div>
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="top-pick-btn">SHOP NOW</a>
            {% endif %}
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</div>

<style>
.top-picks { padding: 32px 0; }
.top-picks-row { display: flex; align-items: flex-start; margin-bottom: 32px; }
.top-picks-label { width: 80px; font-weight: bold; margin-right: 16px; }
.top-picks-shoes { display: flex; gap: 24px; }
.top-pick-card { width: 160px; background: #f7f7f7; border-radius: 8px; overflow: hidden; display: flex; flex-direction: column; align-items: center; box-shadow: 0 2px 8px rgba(0,0,0,0.04); }
.top-pick-img { width: 100%; height: 100px; object-fit: contain; background: #fff; }
.top-pick-title { font-size: 1rem; margin: 8px 0; font-weight: bold; text-align: center; }
.top-pick-btn { color: #fff; background: #111; border: none; border-radius: 4px; padding: 6px 12px; text-decoration: none; font-size: 0.95rem; margin-bottom: 8px; display: inline-block; }
.top-pick-btn:hover { background: #0071e3; }
</style>

