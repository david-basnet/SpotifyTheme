<div class="men-shoes-gallery">
  <h2>{{ section.settings.heading }}</h2>
  <div class="men-shoes-grid">
    {% for block in section.blocks %}
      <div class="men-shoe-card">
        {% if block.settings.image != blank %}
          <img src="{{ block.settings.image | image_url }}" alt="{{ block.settings.title }}" class="men-shoe-img">
        {% endif %}
        <div class="men-shoe-info">
          <div class="men-shoe-title">{{ block.settings.title }}</div>
          <div class="men-shoe-desc">{{ block.settings.desc }}</div>
        </div>
      </div>
    {% endfor %}
  </div>
</div>

<style>
.men-shoes-gallery {
  padding: 48px 0 32px 0;
  background: #fff;
  max-width: 100%;
}
.men-shoes-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 32px;
  max-width: 1600px;
  margin: 0 auto;
  justify-content: flex-start;
}
.men-shoe-card {
  width: 220px;
  background: #f7f7f7;
  border-radius: 8px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 2px 8px rgba(0,0,0,0.04);
  margin-bottom: 24px;
}
.men-shoe-img {
  width: 100%;
  height: 160px;
  object-fit: contain;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.men-shoe-info {
  padding: 16px;
  text-align: left;
  width: 100%;
}
.men-shoe-title {
  font-size: 1rem;
  margin-bottom: 8px;
  font-weight: bold;
}
.men-shoe-desc {
  font-size: 0.95rem;
  color: #555;
}
</style>

{% schema %}
{
  "name": "Men Shoes Gallery",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Men's Shoes Gallery"
    }
  ],
  "blocks": [
    {
      "type": "shoe",
      "name": "Shoe",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Shoe Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Shoe Title"
        },
        {
          "type": "text",
          "id": "desc",
          "label": "Description"
        }
      ]
    }
  ],
  "max_blocks": 15,
  "presets": [
    {
      "name": "Men Shoes Gallery"
    }
  ]
}
{% endschema %} 