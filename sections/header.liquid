<div class="top-bar" id="TopBar">
  <span id="TopBarMessage" style="color: #fff;">STANDARD SHIPPING WITH GOLDTREE</span>
</div>

<div class="navbar">
  <div class="navbar-left">
    {% if section.settings.logo != blank %}
      <img src="{{ section.settings.logo | image_url: width: 120 }}" alt="Logo" class="header-logo">
    {% else %}
      <!-- fallback SVG logo -->
      <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
        <rect width="40" height="40" fill="#000"/>
        <rect x="5" y="25" width="8" height="10" fill="#fff"/>
        <rect x="15" y="15" width="8" height="20" fill="#fff"/>
        <rect x="25" y="5" width="8" height="30" fill="#fff"/>
      </svg>
    {% endif %}
  </div>
  <div class="navbar-center">
    <nav>
      <a href="#">MEN</a>
      <a href="#">WOMEN</a>
      <a href="#">KIDS</a>
      <a href="#">SALE</a>
      <a href="#">NEW & TRENDING</a>
    </nav>
  </div>
  <div class="navbar-right">
    <div class="navbar-top-links">
      <a href="#">help</a>
      <a href="#">orders and returns</a>
      <a href="#">gift cards</a>
      <a href="#">join adiClub</a>
    </div>
    <div class="navbar-actions">
      <form class="search-form">
        <input type="text" placeholder="Search">
        <button type="submit" aria-label="Search">&#128269;</button>
      </form>
      <span title="Account">&#128100;</span>
      <span title="Wishlist">&#10084;</span>
      <span title="Cart">&#128722;</span>
    </div>
  </div>
</div>

<style>
  .top-bar {
    background: #000;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 48px;
    font-size: 1.2rem;
    font-weight: 600;
    letter-spacing: 1px;
  }
  .top-bar span {
    color: #fff;
    transition: color 0.3s;
  }
  .navbar {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    padding: 16px 32px;
    background: #fff;
  }
  .header-logo {
    height: 40px;
  }
  .navbar-center nav {
    display: flex;
    gap: 24px;
  }
  .navbar-center nav a {
    font-weight: bold;
    color: #111;
    text-decoration: none;
    letter-spacing: 2px;
  }
  .navbar-right {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 8px;
  }
  .navbar-top-links {
    display: flex;
    gap: 16px;
    font-size: 0.95rem;
  }
  .navbar-actions {
    display: flex;
    align-items: center;
    gap: 16px;
  }
  .search-form {
    display: flex;
    align-items: center;
    background: #f1f3f4;
    border-radius: 2px;
    padding: 2px 8px;
  }
  .search-form input {
    border: none;
    background: transparent;
    outline: none;
    padding: 4px 8px;
  }
  .search-form button {
    background: none;
    border: none;
    cursor: pointer;
    font-size: 1.2rem;
  }
</style>

<script>
  // Dynamic messages for the top bar
  document.addEventListener('DOMContentLoaded', function() {
    var messages = [
      "STANDARD SHIPPING WITH GOLDTREE",
      "30 DAY FREE RETURNS",
      "NEW ARRIVALS JUST DROPPED"
    ];
    var i = 0;
    var el = document.getElementById('TopBarMessage');
    setInterval(function() {
      i = (i + 1) % messages.length;
      el.textContent = messages[i];
    }, 4000);
  });
</script>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    }
  ]
}
{% endschema %}